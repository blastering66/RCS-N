<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >

    <LinearLayout
        android:id="@+id/wrapper_top"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_back"
            android:src="@drawable/img_logo_txt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_margin="10dp"/>

        <TextView
            android:textColor="@color/color_text_light"
            android:text="Live Life ID"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/wrapper_profile"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_below="@+id/wrapper_top"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <com.pkmmte.view.CircularImageView
            android:id="@+id/img_profile"
            android:src="@drawable/img_profile_test"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/tv_nama"
            android:text="Ridho Maulana"
            android:textColor="@color/color_text_light"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <it.neokree.materialtabs.MaterialTabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/wrapper_profile"
        app:primaryColor="@color/colorPrimary"
        app:accentColor="#ffc400" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:background="@color/color_text_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabHost" />


</RelativeLayout>
